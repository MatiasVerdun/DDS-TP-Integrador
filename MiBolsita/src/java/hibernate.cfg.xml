<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/DDS-TP-Integrador</property>
    <property name="hibernate.connection.pool_size">10000</property>
    <mapping class="DTO.Condicion"/>
    <mapping class="DTO.Cuenta"/>
    <mapping class="DTO.Empresa"/>
    <mapping class="DTO.Indicador"/>
    <mapping class="DTO.Metodologia"/>
    <mapping class="DTO.ValorCuenta"/>
  <mapping class="DTO.ValorIndicador"/>  <mapping class="DTO.Usuario"/>
  </session-factory>
</hibernate-configuration>
